<h1 class="mb-4 text-center">🍳 Recipe Book</h1>

<% if can?(:create, Recipe) %>
  <div class="text-end mb-3">
    <%= link_to "➕ New Recipe", new_recipe_path, class: "btn btn-success" %>
  </div>
<% end %>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @recipes.each do |recipe| %>
    <div class="col">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to recipe.title, recipe_path(recipe), class: "text-decoration-none" %></h5>
          <p class="card-text text-muted">
            ⏱️ <%= recipe.cook_time %> min |
            💪 <%= recipe.difficulty.capitalize %> |
            👤 <%= recipe.user.email %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
