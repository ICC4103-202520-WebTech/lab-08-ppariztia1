<!DOCTYPE html>
<html>
  <head>
    <title>RecipeBook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "actiontext", "data-turbo-track": "reload" %>
    

  </head>

  <body>
    <% unless devise_controller? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light px-4 shadow-sm">
        <div class="container-fluid">
          <%= link_to "🍳 Recipe Book", root_path, class: "navbar-brand fw-bold" %>

          <div class="d-flex align-items-center">
            <% if user_signed_in? %>
              <span class="me-3 text-muted">Logged in as <%= current_user.email %></span>
              <% if current_user.role_admin? %>
                <%= link_to "Manage Recipes", recipes_path, class: "btn btn-outline-danger btn-sm me-2" %>
              <% end %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-primary btn-sm", form: { style: "display:inline;" } %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-outline-secondary btn-sm" %>
            <% end %>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
